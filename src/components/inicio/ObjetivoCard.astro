---
interface Props {
    objetivo: {
        titulo: string,
        descripcion: string,
        imagen: string
    }
}

const { titulo, descripcion, imagen } = Astro.props.objetivo;
---

<div class="card bg-base-100 image-full w-96 shadow-xl h-fit">
    <figure>
        <img src={imagen} alt={titulo} />
    </figure>
    <div class="card-body">
        <h2 class="card-title font-titulos">{titulo}</h2>
        <p>{descripcion}</p>
    </div>
</div>