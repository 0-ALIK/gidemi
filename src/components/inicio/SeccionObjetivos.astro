---
import ObjetivoCard from "./ObjetivoCard.astro";

const objetivos = [
    {
        titulo: 'Investigación en Emprendimiento e Innovación',
        imagen: 'https://media.istockphoto.com/id/904315482/es/foto/joven-cient%C3%ADfico-femenino-atractivo-investigando-en-el-laboratorio.jpg?s=2048x2048&w=is&k=20&c=Gou2h7XsjpMREcCoOSkUXE82Ega7H3usCEarihO7cac=',
        descripcion: 'Desarrollo de proyectos de investigación con expertos locales e internacionales para generar conocimiento y fortalecer el emprendimiento e innovación en Panamá.'
    },
    {
        titulo: 'Formación de Nuevos Investigadores',
        imagen: 'https://media.istockphoto.com/id/1135384963/es/foto/monitorizaci%C3%B3n-de-la-reacci%C3%B3n-de-cerca.jpg?s=612x612&w=is&k=20&c=XvrhOJPmPFjcuOgoVSKaDoS_Nr6HUK6cEnmRXS5lvf8=',
        descripcion: 'Capacitación y formación de nuevos investigadores, especialmente doctorandos, en el área del emprendimiento y la innovación.'
    },
    {
        titulo: 'Apoyo a Emprendedores',
        imagen: 'https://media.istockphoto.com/id/515854952/es/foto/trabajando-en-el-laboratorio-de-ciencias.jpg?s=2048x2048&w=is&k=20&c=QqfRa4u1i3zwlqaCd79VeRXiLMdSFjCAvofkhoEPKe4=',
        descripcion: 'Fomento del desarrollo de emprendedores y empresas incubadas, mediante la creación y transferencia de nuevos conocimientos desde la academia.'
    },
    {
        titulo: 'Divulgación de Resultados',
        imagen: 'https://cdn.pixabay.com/photo/2018/02/27/00/32/microscope-3184432_1280.jpg',
        descripcion: 'Difusión de investigaciones en congresos, ferias y eventos académicos tanto nacionales como internacionales.'
    },
    {
        titulo: 'Material Educativo',
        imagen: 'https://cdn.pixabay.com/photo/2016/03/10/08/49/hand-1248053_1280.jpg',
        descripcion: 'Creación de manuales, monografías y libros de texto para la formación de emprendedores en la UTP y otras instituciones educativas.'
    },
    {
        titulo: 'Estudios Prospectivos',
        imagen: 'https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp',
        descripcion: 'Investigación utilizando la prospectiva para prever escenarios derivados de factores técnicos, científicos, económicos y sociales relacionados con el emprendimiento y la innovación.'
    },
    {
        titulo: 'Publicaciones Científicas',
        imagen: 'https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp',
        descripcion: 'Realización de investigaciones publicables en revistas indexadas y de alto impacto en la comunidad académica.'
    }
];
---


<div>
    
    <div class="mt-10 px-2">
        <h2 class="text-center font-bold text-4xl sm:text-6xl flex justify-center items-center gap-4 mb-2 font-titulos">
            Objetivos
            <samp>
                <svg class="w-14 h-14 fill-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-copy-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18.333 6a3.667 3.667 0 0 1 3.667 3.667v8.666a3.667 3.667 0 0 1 -3.667 3.667h-8.666a3.667 3.667 0 0 1 -3.667 -3.667v-8.666a3.667 3.667 0 0 1 3.667 -3.667zm-3.333 -4c1.094 0 1.828 .533 2.374 1.514a1 1 0 1 1 -1.748 .972c-.221 -.398 -.342 -.486 -.626 -.486h-10c-.548 0 -1 .452 -1 1v9.998c0 .32 .154 .618 .407 .805l.1 .065a1 1 0 1 1 -.99 1.738a3 3 0 0 1 -1.517 -2.606v-10c0 -1.652 1.348 -3 3 -3zm1.293 9.293l-3.293 3.292l-1.293 -1.292a1 1 0 0 0 -1.414 1.414l2 2a1 1 0 0 0 1.414 0l4 -4a1 1 0 0 0 -1.414 -1.414" /></svg>
            </samp>
        </h2>    
        <p class="text-center sm:text-xl text-lg">Promover la investigación y divulgación de conocimientos en emprendimiento e innovación mediante un equipo multidisciplinario, impactando la academia y la sociedad.</p>
    </div>

    <div class="p-10 flex flex-wrap gap-10 justify-center">

        {objetivos.map(objetivo => (
            <ObjetivoCard objetivo={objetivo} />
        ))}

    </div>
    
</div>