---
interface Props {
    miembro: {
        nombre: string,
        rol: string,
        img?: string
    }
}

const { nombre, rol, img } = Astro.props.miembro;
---


<div class="flex items-center gap-3">
    <div class="avatar">
        <div class="mask mask-squircle h-12 w-12">
            <img
                src={img ? img : "/user_placeholder.png"}
                alt={nombre} />
        </div>
    </div>
    <div>
        <div class="font-bold">{nombre}</div>
        <div class="text-sm opacity-50">{rol}</div>
    </div>
</div>